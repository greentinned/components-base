{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./build/",
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
